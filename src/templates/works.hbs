<div class="our-work section">
    <div class="container">
        <div class="title-section">
            <h3>{{works.title}}</h3>
            <p><span class="line"></span> {{works.subtitle}}</p>
        </div>
        <div class="row no-gutters">
            {{#each works.items}}
                <div class="col-md-4 col-sm-6 col-12">
                    <div class="content">
                        <a href="{{link}}" class="portfolio-popup">
                            <img src="{{img}}" alt="">
                            <div class="caption">
                                <h6>{{title}}</h6>
                                <p>{{subtitle}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>